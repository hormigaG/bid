<?xml version='1.0' encoding='utf-8'?>
<widget id="com.filoquin.bid" version="1.0.30" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BID</name>
    <description>
	BID
    </description>
    <author email="Filoquin" href="http://cordova.io">
        Filoquin | JANO
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
            <icon src="res/mdpi.png" density="mdpi" />
            <icon src="res/ldpi.png" density="ldpi" />
            <icon src="res/hdpi.png" density="hdpi" />
            <icon src="res/xdpi.png" density="xhdpi" />
            <icon src="res/xxdpi.png" density="xxhdpi" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="com-darryncampbell-cordova-plugin-intent" spec="^1.2.0" />

</widget>
